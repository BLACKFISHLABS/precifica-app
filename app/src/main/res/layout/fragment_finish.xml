<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground">

    <LinearLayout
        style="@style/ContainerLayout"
        android:gravity="center">

        <TextView
            android:id="@+id/description_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_large"
            android:gravity="center"
            android:text="O custo estimado do seu aplicativo é de:"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"/>
        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_large"
            android:gravity="center"
            android:text="R$ 100.000,00"
            android:textColor="@color/colorPrimary"
            android:textSize="52sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/action_button"
            android:text="COMPARTILHAR CUSTO ESTIMADO"
            android:textColor="@color/md_blue_900" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_medium"
            android:background="@drawable/action_button"
            android:text="VER RESUMO DO CUSTO ESTIMADO"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:id="@+id/description_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/keyline_medium"
            android:text="Este aplicativo tem a finalidade de realizar um custo estimado sobre horas gastas, baseado no questionário aplicado.\n"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/btn_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_medium"
            android:background="@null"
            android:text="MAIS INFORMAÇÕES"
            android:textColor="@color/md_blue_900" />


    </LinearLayout>

</FrameLayout>